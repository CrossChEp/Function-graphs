#:import SwapTransition kivy.uix.screenmanager.SwapTransition


<MenuScreen@Screen>:
    text1:text1
    AnchorLayout:
        anchor_x: 'center'
        anchor_y: 'center'
        BoxLayout:
            orientation: 'vertical'
            size_hint: 0.6, 0.4
            Button:
                id:text1
                text: 'Linear function'
                halign: 'center'
                valign: 'center'
                size_hint: 1, 1
                on_press: root.manager.current = 'linear_function'
            Button:
                text: 'Square function'
                halign: 'center'
                valign: 'center'
                size_hint: 1, 1
            Button:
                text: 'inverse proportion'
                halign: 'center'
                valign: 'center'
                size_hint: 1, 1

<LinearFunction@Screen>:
    txt:txt
    AnchorLayout:
        anchor_x: 'center'
        anchor_y: 'center'
        BoxLayout:
            orientation: 'vertical'
            size_hint: 0.6, 0.6
            Label:
                text: 'Введите координаты через пробел'
                color: 'white'
            TextInput:
                id:txt
                text: ''
                halign: 'center'
                valign: 'center'
                size_hint: 1, 0.3
                multiline: False
            Button:
                text: 'Draw'
                halign: 'center'
                valign: 'center'
                size_hint: 1, 0.3
                on_press: root.change()
            Button:
                text: 'Back'
                halign: 'center'
                valign: 'center'
                size_hint: 1, 0.3
                on_press: root.manager.current = 'menu'



