#:import SwapTransition kivy.uix.screenmanager.SwapTransition


<MenuScreen@Screen>:
    AnchorLayout:
        anchor_x: 'center'
        anchor_y: 'center'
        BoxLayout:
            orientation: 'vertical'
            size_hint: 0.6, 0.4
            Button:
                text: 'Линейная функция'
                halign: 'center'
                valign: 'center'
                size_hint: 1, 1
                on_press: root.manager.current = 'linear_function'
            Button:
                text: 'Квадратичная функция'
                halign: 'center'
                valign: 'center'
                size_hint: 1, 1
            Button:
                text: 'Обратная пропорцианальность'
                halign: 'center'
                valign: 'center'
                size_hint: 1, 1

<LinearFunction@Screen>:
    AnchorLayout:
        anchor_x: 'center'
        anchor_y: 'center'
        BoxLayout:
            orientation: 'vertical'
            size_hint: 0.6, 0.4
            TextInput:
                text: ''
                halign: 'center'
                valign: 'center'
                size_hint: 1, 0.3
            Button:
                text: 'Отрисовать'
                halign: 'center'
                valign: 'center'
                size_hint: 1, 0.3
            Button:
                text: 'Назад'
                halign: 'center'
                valign: 'center'
                size_hint: 1, 0.3
                on_press: root.manager.current = 'menu'


