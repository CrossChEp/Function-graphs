<MenuScreen@Screen>:
    text1:text1
    AnchorLayout:
        anchor_x: 'center'
        anchor_y: 'center'
        BoxLayout:
            orientation: 'vertical'
            size_hint: 0.6, 0.4
            MDRectangleFlatButton:
                id:text1
                text: 'Linear function'
                halign: 'center'
                valign: 'center'
                size_hint: 1, 1
                theme_text_color: "Custom"
                text_color: 1, 1, 1, 1
                line_color: 1, 1, 1, 1
                on_press: root.manager.current = 'linear_function'
            BoxLayout:
                size_hint: 0.6, 0.2
            MDRectangleFlatButton:
                text: 'Square function'
                halign: 'center'
                valign: 'center'
                size_hint: 1, 1
                theme_text_color: "Custom"
                text_color: 1, 1, 1, 1
                line_color: 1, 1, 1, 1
                on_press: root.manager.current = 'square_function'
            BoxLayout:
                size_hint: 0.6, 0.2
            MDRectangleFlatButton:
                text: 'inverse proportion(doesnt work yet)'
                halign: 'center'
                valign: 'center'
                size_hint: 1, 1
                theme_text_color: "Custom"
                text_color: 1, 1, 1, 1
                line_color: 1, 1, 1, 1
                on_press: root.manager.current = 'inverse_proportion'

<LinearFunction@Screen>:
    txt:txt
    AnchorLayout:
        anchor_x: 'center'
        anchor_y: 'center'
        BoxLayout:
            orientation: 'vertical'
            size_hint: 0.6, 0.6
            Label:
                text: 'Give me k and b variables'
                color: 'white'
            MDTextField:
                id:txt
                text: ''
                halign: 'center'
                valign: 'center'
                size_hint: 1, None
                multiline: False
            BoxLayout:
                size_hint: 0.6, 0.1
            MDRectangleFlatButton:
                text: 'Draw'
                halign: 'center'
                valign: 'center'
                size_hint: 1, 0.3
                theme_text_color: "Custom"
                text_color: 1, 1, 1, 1
                line_color: 1, 1, 1, 1
                on_press: root.change()
            BoxLayout:
                size_hint: 0.6, 0.1
            MDRectangleFlatButton:
                text: 'Back'
                halign: 'center'
                valign: 'center'
                size_hint: 1, 0.3
                theme_text_color: "Custom"
                text_color: 1, 1, 1, 1
                line_color: 1, 1, 1, 1
                on_press: root.manager.current = 'menu'

