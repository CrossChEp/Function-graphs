#:import SwapTransition kivy.uix.screenmanager.SwapTransition


<MenuScreen@Screen>:
    text1:text1
    AnchorLayout:
        anchor_x: 'center'
        anchor_y: 'center'
        BoxLayout:
            orientation: 'vertical'
            size_hint: 0.6, 0.4
            Button:
                id:text1
                text: 'Linear function'
                halign: 'center'
                valign: 'center'
                size_hint: 1, 1
                on_press: root.manager.current = 'linear_function'
            Button:
                text: 'Square function'
                halign: 'center'
                valign: 'center'
                size_hint: 1, 1
                on_press: root.manager.current = 'square_function'
            Button:
                text: 'inverse proportion'
                halign: 'center'
                valign: 'center'
                size_hint: 1, 1

<LinearFunction@Screen>:
    txt:txt
    AnchorLayout:
        anchor_x: 'center'
        anchor_y: 'center'
        BoxLayout:
            orientation: 'vertical'
            size_hint: 0.6, 0.6
            Label:
                text: 'Give me k and b variables'
                color: 'white'
            TextInput:
                id:txt
                text: ''
                halign: 'center'
                valign: 'center'
                size_hint: 1, 0.3
                multiline: False
            Button:
                text: 'Draw'
                halign: 'center'
                valign: 'center'
                size_hint: 1, 0.3
                on_press: root.change()
            Button:
                text: 'Back'
                halign: 'center'
                valign: 'center'
                size_hint: 1, 0.3
                on_press: root.manager.current = 'menu'

<SquareFunction@Screen>:
    txt:txt
    AnchorLayout:
        anchor_x: 'center'
        anchor_y: 'center'
        BoxLayout:
            orientation: 'vertical'
            size_hint: 0.6, 0.6
            Label:
                text: 'Give me a b and c variables'
                color: 'white'
            TextInput:
                id:txt
                text: ''
                halign: 'center'
                valign: 'center'
                size_hint: 1, 0.3
                multiline: False
            Button:
                text: 'Draw'
                halign: 'center'
                valign: 'center'
                size_hint: 1, 0.3
                on_press: root.change()
            Button:
                text: 'Back'
                halign: 'center'
                valign: 'center'
                size_hint: 1, 0.3
                on_press: root.manager.current = 'menu'

<DrawLinearFunctionScreen@Screen>:
    drawButton:drawButton
    Button:
        id: drawButton
        text: 'Click on the screen to draw function'
        on_press: root.drawingWindow()
        background_normal: ''
        background_color: 0,0,0

<DrawSquareFunction@Screen>:
    drawButton:drawButton
    Button:
        id: drawButton
        text: 'Click on the screen to draw function'
        #on_press: root.drawingWindow()
        background_normal: ''
        background_color: 0,0,0
        on_press: root.drawingSquareWindow()
